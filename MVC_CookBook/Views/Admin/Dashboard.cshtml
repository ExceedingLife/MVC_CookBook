
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*  -- TO DO: --
    1. Adjust Panels to same size,
    2. Add Panel colors to CSS,
    3. Adjust Screen sizes for devices,
    4. Create ViewBags,
    5. Centerize panels in row
*@
<div class="jumbotron text-center">
    <h2><b>Administrator Dashboard</b></h2>
</div>

<div class="row justify-content-center">
    @*align-items-center*@
    <div class="col-lg-12 col-md-12 col-sm-12 ">

        <!--    ROW 1 SECTION 1   -->
        <div class="col-lg-3 col-md-3 col-sm-10">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="glyphicon glyphicon-user" style="font-size: 7em;"></span>
                        </div>
                        <div class="col-xs-9 text-right">
                            <h1>@ViewBag.UsersCount</h1>
                            <h3>View</h3>
                            <h4>All Users</h4>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("ViewAllUsers", "Admin")">
                    <div class="panel-footer">
                        <span class="pull-left">Administrator Users Menu</span>
                        <span class="pull-right glyphicon glyphicon-circle-arrow-right"></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>


        <!--    ROW 1 SECTION 2   -->
        <div class="col-lg-3 col-md-6">
            <div class="panel panel-success">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="glyphicon glyphicon-book" style="font-size: 7em;"></span>
                        </div>
                        <div class="col-xs-9 text-right">
                            <h1>@ViewBag.RolesCount</h1>
                            <h3>User Roles</h3>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("AdminRoleManager", "Admin")">
                    <div class="panel-footer">
                        <span class="pull-left">Role Manager</span>
                        <span class="pull-right glyphicon glyphicon-circle-arrow-right"></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>


        <!--    ROW 1 SECTION 3   -->
        <div class="col-lg-3 col-md-3 col-sm-10">
            <div class="panel panel-danger">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="glyphicon glyphicon-cog" style="font-size: 7em;"></span>
                        </div>
                        <div class="col-xs-9 text-right">
                            <h3>Account</h3>
                            <h4>Settings</h4>
                        </div>
                    </div>
                </div>
                <a href="@Url.Action("Index", "Home")">
                    <div class="panel-footer">
                        <span class="pull-left">Administrator Account Menu</span>
                        <span class="pull-right glyphicon glyphicon-circle-arrow-right"></span>
                        <div class="clearfix"></div>
                    </div>
                </a>
            </div>
        </div>


    </div>
</div>

